[core]
    autocrlf = input

[diff]
    tool = kdiff3
    
[merge]
    tool = kdiff3

[difftool "kdiff3"]
    cmd = kdiff3 $LOCAL $REMOTE --output $MERGED
    keepBackup = false
    trustExitCode = false

[mergetool "kdiff3"]
    cmd = kdiff3 $LOCAL $REMOTE --output $MERGED
    keepBackup = false
    trustExitCode = false

